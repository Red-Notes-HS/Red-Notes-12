{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/.aux": true,
		"**/.fls": true,
		"**/.log": true,
		"**/.toc": true,
		"**/.fdb_latexmk": true,
		"**/.synctex.gz": true,
	},
	"editor.useTabStops": false,
	"latex-workshop.latex.outDir": "./pdf",
	"latex-workshop.latex.recipes": [
		{
			"name": "latexmk",
			"tools": [
				"latexmk"
			]
		}
	],
	"latex-workshop.latex.tools": [
		{
			"name": "latexmk",
			"command": "latexmk",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-pdf",
				"-aux-directory=auxilary",
				"-output-directory=pdf",
				"%DOC%"
			]
		},
		{
			"name": "pdflatex",
			"command": "pdflatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-aux-directory=auxilary",
				"-output-directory=pdf",
				"%DOC%"
			]
		}
	],
	"explorer.excludeGitIgnore": true
}